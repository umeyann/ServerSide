
@{
    ViewData["Title"] = "Index/Hello";
    var id = ViewData["id"];
    var password = ViewData["password"];
    var msg_iderror = ViewData["IdError"];
    var msg_passerror = ViewData["passErorr"];
}

<div class="text-left">

    <h1 class="display-3">Index</h1>
    <p class="h4 mb-4">@ViewData["id"]</p>
    <p class="h4 mb-4">@ViewData["password"]</p>
    <p class="h4 mb-4">@ViewData["IdError"]</p>
    <p class="h4 mb-4">@ViewData["passErorr"]</p>
    <p class="h4 mb-4">@ViewData["session"]</p>

    <form method="post" asp-controller="Hello" asp-action="Form">

        <div class="form-group">
            <label asp-for="@id" class="h5">ID</label>
            <input asp-for="@id" class="form-control" />

            <label asp-for="@password" class="h5">PASSWARD</label>
            <input asp-for="@password" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" />
        </div>

    </form>

    <h1 class="display-3">Query</h1>
    <p class="h4 mb-4">@ViewData["message"]</p>

</div>